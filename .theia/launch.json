{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
          "name": "ClientApp (web-theia)",
          "type": "coreclr",
          "request": "launch",
          "preLaunchTask": "CA dotnet build",
          "cwd": "${workspaceFolder}/src/WebUI",
          // "console": "internalConsole",
          "console": "integratedTerminal",
          "internalConsoleOptions": "openOnSessionStart",
          "stopAtEntry": false,
          "launchBrowser": {
            "enabled": true
          },
          // "serverReadyAction": {
          //     "action": "openExternally",
          //     "pattern": "^\\s*Now listening on:\\s+(https?://\\S+)",
          //     "uriFormat": "%s/"
          // },
          "program": "${workspaceFolder}/src/WebUI/bin/Debug/net5.0/CleanArchitecture.WebUI.dll",
          "windows": {
            "program": "dotnet",
            "args": [
              "run"
            ]
          },
          "linux": {
            // In order to kill the process correctly use only linux generated executable.
            // In linux if you use "dotnet run" or "${workspaceFolder}/src/dotnet-project/bin/Debug/netcoreapp5.0/dotnet-project.dll" the main process won't be killed when you stop the debugging.
            "program": "${workspaceFolder}/src/WebUI/bin/Debug/net5.0/CleanArchitecture.WebUI.dll",
            "args": [
              // "--urls",
              // "http://0.0.0.0:5001"
            ]
          },
          "env": {
            "ASPNETCORE_ENVIRONMENT": "Development",
            "ASPNETCORE_URLS": "http://0.0.0.0:5001"
          }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}
